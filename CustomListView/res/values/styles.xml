<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 下拉刷新进度动画 -->
    <style name="refreshProgressStyle">
        <item name="android:indeterminateDrawable">@anim/refresh_progress_animation_list</item>
        <item name="android:layout_width">22dip</item>
        <item name="android:layout_height">22dip</item>
    </style>

    <!-- 加载图片动画 -->
    <style name="loadingImageProgressStyle">
        <item name="android:indeterminateDrawable">@anim/refresh_progress_animation_list</item>
        <item name="android:layout_width">22dip</item>
        <item name="android:layout_height">22dip</item>
    </style>

    <!-- 刷新列表样式 -->
    <style name="refreshListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

</resources>